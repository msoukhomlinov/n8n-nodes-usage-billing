{
  "compilerOptions": {
    "lib": ["es2019", "es2020", "es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationMap": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES2021",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src/nodes/**/*.ts", "src/credentials/**/*.ts"],
  "exclude": ["node_modules/**/*", ".git/**/*"]
}
